{
  "name": "rt-notify",
  "version": "2.0.0",
  "description": "simple yet powerful notifications for React",
  "main": "build/index.umd.js",
  "module": "build/index.esm.js",
  "author": "Glebcha",
  "license": "MIT",
  "repository": "https://github.com/glebcha/rt-notify",
  "homepage": "https://glebcha.github.io/rt-notify",
  "files": [
    "build",
    "package-lock.json"
  ],
  "keywords": [
    "react",
    "notification",
    "toast",
    "rt-notify"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "npx npm-run-all --parallel lint:*",
    "lint:code": "eslint src --ext .ts,.tsx",
    "lint:style": "stylelint \"src/**/*.css\"",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "build": "npx npm-run-all --parallel build:*",
    "build:lib": "cross-env NODE_ENV=production rollup -c",
    "build:types": "npx dts-bundle-generator --no-banner -o build/lib.d.ts src/index.ts",
    "build:changelog": "changelog/generate-changelog",
    "preversion": "npm run lint",
    "postversion": "npm run build",
    "storybook": "start-storybook -p 6006",
    "stories": "npx npm-run-all --sequential stories:*",
    "stories:build": "build-storybook -s public",
    "stories:deploy": "storybook-to-ghpages"
  },
  "dependencies": {
    "clsx": "^1.2.0",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-transition-group": "^4.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@size-limit/preset-big-lib": "^4.9.2",
    "@storybook/addon-docs": "^6.1.20",
    "@storybook/addon-knobs": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@storybook/storybook-deployer": "^2.8.7",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.20",
    "@types/ramda": "^0.27.38",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-transition-group": "^4.4.1",
    "@types/storybook__addon-knobs": "^5.0.4",
    "@types/storybook__react": "^5.2.1",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "awesome-typescript-loader": "^5.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "dts-bundle-generator": "^5.7.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-changelog": "^2.0.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "npm-run-all": "^4.1.5",
    "postcss-global-import": "^1.0.6",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.2.0",
    "postcss-mixins": "^6.2.3",
    "postcss-modules": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "rollup": "^2.40.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "rollup-plugin-ramda": "^1.0.5",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git": "^2.35.2",
    "size-limit": "^4.9.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.11.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  }
}
