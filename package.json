{
  "name": "rt-notify",
  "version": "2.0.0",
  "description": "simple yet powerful notifications for React",
  "main": "build/index.umd.js",
  "module": "build/index.esm.js",
  "author": "Glebcha",
  "license": "MIT",
  "repository": "https://github.com/glebcha/rt-notify",
  "homepage": "https://glebcha.github.io/rt-notify",
  "files": [
    "build",
    "package-lock.json"
  ],
  "keywords": [
    "react",
    "notification",
    "toast",
    "rt-notify"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "npx concurrently npm:lint:*",
    "lint:code": "eslint src --ext .ts,.tsx",
    "lint:style": "stylelint \"src/**/*.css\"",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "build": "npx concurrently npm:build:*",
    "build:lib": "cross-env NODE_ENV=production rollup -c",
    "build:types": "npx dts-bundle-generator --no-banner -o build/lib.d.ts src/index.ts",
    "build:changelog": "changelog/generate-changelog",
    "preversion": "npm run lint",
    "postversion": "npm run build",
    "storybook": "start-storybook -p 6006",
    "stories": "npm run stories:build && stories:deploy",
    "stories:build": "build-storybook -s public",
    "stories:deploy": "storybook-to-ghpages"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "ramda": "^0.28.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.2",
    "@storybook/addon-controls": "6.5.15",
    "@storybook/addon-docs": "6.5.15",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "6.5.15",
    "@storybook/manager-webpack5": "6.5.15",
    "@storybook/react": "6.5.15",
    "@storybook/storybook-deployer": "2.8.16",
    "@types/estree": "1.0.0",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/ramda": "0.28.20",
    "@types/react": "17.0.52",
    "@types/react-dom": "17.0.18",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "cross-env": "^7.0.3",
    "css-loader": "6.7.3",
    "dts-bundle-generator": "7.1.0",
    "eslint": "8.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "^4.3.0",
    "git-changelog": "^2.0.0",
    "jest": "29.3.1",
    "mini-css-extract-plugin": "2.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "8.4.20",
    "postcss-global-import": "^1.0.6",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.0.2",
    "postcss-mixins": "^9.0.4",
    "postcss-modules": "6.0.0",
    "postcss-preset-env": "7.8.3",
    "prettier": "2.8.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "rollup": "3.9.0",
    "rollup-plugin-node-externals": "5.0.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-modules": "2.1.0",
    "rollup-plugin-ramda": "^1.0.5",
    "rollup-plugin-summary": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "simple-git": "3.15.1",
    "size-limit": "^8.1.0",
    "style-loader": "^3.3.1",
    "stylelint": "14.16.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "4.9.4",
    "webpack": "5.75.0"
  }
}
